{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev:front",
      "type": "shell",
      "command": "pnpm run dev:front",
      "presentation": { "panel": "new", "group": "dev" }
    },
    {
      "label": "dev:back",
      "type": "shell",
      "command": "pnpm run dev:back",
      "presentation": { "panel": "new", "group": "dev" }
    },
    {
      "label": "dev:workers",
      "type": "shell",
      "command": "pnpm run dev:workers",
      "presentation": { "panel": "new", "group": "dev" }
    },
    {
      "label": "docker:compose:up",
      "type": "shell",
      "command": "docker compose up -d",
      "presentation": { "reveal": "always", "panel": "new" }
    },
    {
      "label": "start:dev:apps:parallel",
      "dependsOn": ["dev:front", "dev:back", "dev:workers"],
      "dependsOrder": "parallel"
    },
    {
      "label": "Start All Dev",
      "dependsOn": ["docker:compose:up", "start:dev:apps:parallel"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
